<div class="container p-5">
    <!-- Material form login -->
    <div class="card">

        <h2 class="card-header info-color white-text text-center py-4">
            <strong>Log in</strong>
        </h2>

        <!--Card content-->
        <div class="card-body px-lg-5 pt-0">

            <!-- Form -->
            <form class="text-center" style="color: #757575;" action="/users/login" method="POST">

                <!-- Email -->
                <div class="md-form">
                    <span class="input-group-addon"><i class="fas fa-user"></i></span>
                    <input type="email" id="materialLoginFormEmail" required name="email" class="form-control">
                    <label for="materialLoginFormEmail">E-mail</label>
                </div>

                <!-- Password -->
                <div class="md-form">
                    <span class="input-group-addon"><i class="fas fa-lock"></i></span>
                    <input data-toggle="tooltip" title="Password must be at least 4 characters" type="password"
                        id="materialLoginFormPassword" required name="password" class="form-control">
                    <label for="materialLoginFormPassword">Password</label>
                </div>

                <!-- Sign in button -->
                <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">
                    Sign in
                </button>

                <!-- Sign Up -->
                <p>Not registered?
                    <a href="/users/signup">Sign Up</a>
                </p>

            </form>
            <!-- Form -->

        </div>

    </div>
    <!-- Material form login -->
</div>