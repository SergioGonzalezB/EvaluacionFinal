<div class="container px-5 formulario">
    <form class="form-horizontal pt-5 pl-5" action="/products/new" method="POST">
        <fieldset>
    
            <!-- Form Name -->
            <legend>Add a new product</legend>
    
            <!-- Text input-->
            <div class="form-group">
                <label class=" control-label" for="ProductName">PRODUCT NAME</label>
                <div class="">
                    <input id="ProductName" name="ProductName" placeholder="" class="form-control input-md" autofocus
                        required type="text">
    
                </div>
            </div>
    
            <!-- Select Basic -->
            <div class="form-group">
                <label class=" control-label" for="Category">PRODUCT CATEGORY</label>
                <div class="">
                    <select id="Category" name="Category" class="form-control">
                        <option value="Computers">Computers</option>
                        <option value="Phones">Phones</option>
                        <option value="Accesories">Accesories</option>
                    </select>
                </div>
            </div>
    
            <!-- Text input-->
            <div class="form-group">
                <label class=" control-label" for="Price">PRICE</label>
                <div class="">
                    <input id="Price" name="Price" placeholder="" class="form-control input-md" required type="number">
                </div>
            </div>
    
    
            <!-- Textarea -->
            <div class="form-group">
                <label class=" control-label" for="Description">PRODUCT DESCRIPTION</label>
                <div class="">
                    <textarea class="form-control" id="Description" name="Description" required></textarea>
                </div>
            </div>
    
            <!-- Button -->
            <div class="form-group">
                <label class=" control-label" for="button">Save new product</label>
                <div class="">
                    <button type="submit" id="button" name="button" class="btn btn-primary">Save</button>
                </div>
            </div>
    
        </fieldset>
    </form>
</div>